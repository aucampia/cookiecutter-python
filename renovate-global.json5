{
    // https://docs.renovatebot.com/self-hosted-experimental/
    // https://docs.renovatebot.com/self-hosted-configuration/
    //   "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "platform": "github",
    "repositoryCache": "enabled",
    // The config is in the global config file (i.e. this file)
    "requireConfig": "optional",
    "onboarding": false,
    "allowedCommands": [
        ".*",
    ],
    // The report file is used to filter branches collected by the
    // pre-push git hook. Only branches that have a report entry and was
    // collected by the pre-push git hook will be "touched".
    "reportPath": "/tmp/renovate/report.json",
    "reportType": "file",
    // By default, Renovate will use `--no-verify` to skip git hooks
    // when doing "commit" and "push", but the pre-push git hook is used
    // to collect modified branches so that they can be "touched" to
    // trigger the CI pipeline. This overwrites the default so that it's
    // just "commit" that uses `--no-verify`.
    "gitNoVerify": [
        "commit"
    ],
    "repositories": [
        {
            "repository": "aucampia/cookiecutter-python",
            // https://docs.renovatebot.com/config-overview/
            // https://docs.renovatebot.com/configuration-options/
            // https://docs.renovatebot.com/modules/manager/
            "extends": [
                "config:recommended"
            ],
            "labels": [
                "dependencies"
            ],
            "vulnerabilityAlerts": {
                "enabled": true,
            },
            "pinDigests": true,
            "osvVulnerabilityAlerts": true,
            "dependencyDashboardOSVVulnerabilitySummary": true,
            "prConcurrentLimit": 5,
            // https://docs.renovatebot.com/modules/manager/
            "enabledManagers": [
                "pep621",
                "pip-compile",
                "github-actions",
                "gomod",
                "dockerfile",
                "docker-compose",
                "pip_requirements",
            ],
            "lockFileMaintenance": {
                "enabled": true,
                "schedule": [
                    "* * * * *"
                ],
            },
            "automerge": true,
            "automergeStrategy": "squash",
            "platformAutomerge": true,
            "rebaseWhen": "conflicted",
            "postUpdateOptions": [
                "gomodTidy"
            ],
            "packageRules": [
                {
                    "matchManagers": [
                        "pep621",
                        "pip_requirements",
                        "gomod"
                    ],
                    "rangeStrategy": "update-lockfile"
                }
            ]
        }
    ]
}
